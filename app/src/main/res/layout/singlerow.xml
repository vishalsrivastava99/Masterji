<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:padding="@dimen/_2sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:id="@+id/studentpic"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:src="@drawable/coverphoto"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nametext"
                android:text="Name of Student"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/textcolor"
                android:layout_toRightOf="@id/studentpic"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                />

        <TextView
            android:id="@+id/collegeview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametext"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/studentpic"
            android:paddingLeft="@dimen/_10sdp"
            android:text="College"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/_12sdp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailtext"
                android:text="college name"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/lighttextcolor"
                android:layout_toRightOf="@id/collegeview"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_below="@+id/nametext"
                />


        <TextView
            android:id="@+id/feesview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailtext"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/studentpic"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Fees:"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fees"
            android:hint="Month fees"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/lighttextcolor"
            android:layout_toRightOf="@id/feesview"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_below="@+id/emailtext"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewbtn"
            android:textSize="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailtext"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/fees"
            android:insetLeft="@dimen/_3sdp"
            android:insetRight="@dimen/_3sdp"
            android:text="View"
            android:insetBottom="@dimen/_10sdp"
            android:insetTop="@dimen/_8sdp"
            android:textColor="@color/white"
            app:backgroundTint="@color/logocolor" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>